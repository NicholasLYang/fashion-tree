<article>
    <!--TODO: MODAL-->
    <% product_number = 0 %>
    <% @products.take(50).each do |product| %>
        <div class="square <%= 'card-' + product.section.downcase %> <%= 'card-' + product.brand.downcase %>">
            <div class="content">
                <%= link_to product.link do %>
                    <%= image_tag(product.picture, class: "img-responsive") %>
                    <span><b>Shop now</b></span>
                <% end %>
                <p class="product-brand">
                    <% if product.brand == "hm" %>
                        h&m
                    <% else %>
                        <%= product.brand %>
                    <% end %>
                </p>
                <p><%= product.name %></p>
                <p id="price">$<%= product.price %></p>
                <% if product.score == 0 %>
                    <p class="bad-score">98</p>
                <% elsif product.score < 12.0 %>
                    <p class="good-score"><%= product.score %></p>
                <% elsif product.score < 100.0 %>
                    <p class="ok-score"><%= product.score  %></p>
                <% else %>
                    <p class="bad-score"><%= product.score %></p>
                <% end %>
            </div>
        </div>
        <script>
        function showDiv() {
           document.getElementById('modal<%=49-product_number%>').style.display = "block";
        }
        $('#trigger').on('click', function () {
    $('#overlay, #overlay-back').fadeIn(500);
});

        function hideDiv() {
            document.getElementById('modal<%=49-product_number%>').style.display = "none";
        }

        </script>
        <div id="overlay-back"></div>
<div id="overlay">
        <div class="modal" id="modal<%=product_number%>" style="display:none">

            <div class="modal-content">
            <h2 class="modal-title"><%= product.name %> $<%= product.price %></h2>
            <div id="prod-image">
                <%= image_tag(product.picture, class: "img-modal") %>
            </div>
            <table><tr><td>
                     flexible washed superstretch denim for added freedom of movement. Elasticized waistband, mock front pockets, and regular back pockets. 60% cotton, 38% polyester, 2% spandex.
                    </td>
                    <td>
                    <p class="green-index">Green Index:<br>
                        <% if product.score == 0 %>
                            <p class="bad-score">98</p>
                        <% elsif product.score < 12.0 %>
                            <p class="good-score"><%= product.score %></p>
                        <% elsif product.score < 100.0 %>
                            <p class="ok-score"><%= product.score  %></p>
                        <% else %>
                            <p class="bad-score"><%= product.score %></p>
                        <% end %>
                    </p>
                </td></tr></table>

            <button id="buy">Shop Now</button>

          </div>

      </div></div>
        <% product_number += 1 %>
    <% end %>
</article>

</div>

